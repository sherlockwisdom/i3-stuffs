# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

# check errors
# i3bar -V --bar_id=bar-0

bar { 
	tray_output none
	position top
	status_command /usr/bin/bumblebee-status \
	-m progress todo publicip traffic nic kernel uptime amixer \
	-p nic.states=^down nic.right-click="terminator -e 'nmtui'" amixer.right-click="terminator -e 'alsamixer'" \
	-t nord-powerline
}

bar { 
	tray_output none
	position bottom
	status_command /usr/bin/bumblebee-status \
	-m xkcd memory cpu brightness datetime battery \
	-p  battery.showpowerconsumption=true brightness.use_acpi=true \
		cpu.right-click="terminator -e htop" \
	-t greyish-powerline 
}

